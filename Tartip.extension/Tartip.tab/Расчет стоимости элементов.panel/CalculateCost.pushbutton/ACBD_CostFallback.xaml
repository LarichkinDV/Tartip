<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Стоимость объекта" Width="360" Height="140"
    WindowStartupLocation="Manual" Left="20" Top="80"
    WindowStyle="ToolWindow" Topmost="True" ResizeMode="NoResize" ShowInTaskbar="False">
      <Border CornerRadius="6" Background="#202020" Padding="10">
        <StackPanel>
          <TextBlock Text="Стоимость проектируемого объекта" Foreground="White" FontSize="14" FontWeight="Bold"/>
          <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
            <TextBlock Text="Н: " Foreground="White" FontSize="16"/>
            <TextBlock Name="ValN" Foreground="White" FontSize="16" FontWeight="Bold"/>
          </StackPanel>
          <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
            <TextBlock Text="Ф: " Foreground="White" FontSize="16"/>
            <TextBlock Name="ValF" Foreground="White" FontSize="16" FontWeight="Bold"/>
          </StackPanel>
        </StackPanel>
      </Border>
    </Window>